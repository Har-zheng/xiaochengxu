/* pages/book-detail/book-detail.wxss */

.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgb(236, 236, 236);
}
.head{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    width: 100%;
    padding-bottom: 30rpx;
}
.title{
    font-size: 46rpx;
    margin: 8rpx 0;
    font-weight: bold;
}
.author{
    font-size: 32rpx;
    color: #999;
}
.head image{
    width: 240rpx;
    height: 360rpx;
}
.sub-container{
    margin-top: 30rpx;
    background-color: #ffff;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-self: center;
    padding: 0 0 20rpx 0;
}
.headline{
    text-align: center;
    padding: 20rpx 0;
}
.comment-container{
    padding: 0 30rpx;
}
